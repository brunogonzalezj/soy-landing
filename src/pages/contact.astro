---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us - Soy Excellence Center">
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      {/* Header */}
      <div class="max-w-3xl mx-auto text-center mb-12 scroll-reveal-section">
        <span class="inline-block px-4 py-2 bg-sec-yellow/10 text-sec-yellow rounded-full text-sm font-semibold mb-6" data-i18n="contactPage.badge">
          GET IN TOUCH
        </span>
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-ussec-green mb-6" data-i18n="contactPage.title">
          Let's Start a Conversation
        </h1>
        <p class="text-lg text-gray-600 leading-relaxed" data-i18n="contactPage.subtitle">
          Tell us about yourself and your interests by completing the form below.
          Our team will review your information and a representative will reach out to you shortly.
        </p>
      </div>

      {/* Contact Form */}
      <div class="max-w-4xl mx-auto scroll-reveal-section">
        <div class="scroll-reveal-item bg-white rounded-3xl shadow-xl p-8 md:p-12">
          <form id="contact-form" class="space-y-8">
            {/* Personal Information Section */}
            <div>
              <h2 class="text-2xl font-bold text-ussec-green mb-6 flex items-center gap-3">
                <span class="w-10 h-10 rounded-full bg-sec-yellow/10 flex items-center justify-center text-sec-yellow text-lg">1</span>
                <span data-i18n="contactPage.personalInfo">Personal Information</span>
              </h2>
              <div class="grid md:grid-cols-2 gap-6">
                {/* First Name */}
                <div>
                  <label for="firstName" class="block text-sm font-semibold text-gray-700 mb-2">
                    <span data-i18n="contactPage.firstName">First Name</span> <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    required
                    class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-sec-yellow focus:ring-2 focus:ring-sec-yellow/20 transition-all duration-300 outline-none"
                    placeholder="Enter your first name"
                    data-i18n-placeholder="contactPage.firstNamePlaceholder"
                  />
                </div>

                {/* Last Name */}
                <div>
                  <label for="lastName" class="block text-sm font-semibold text-gray-700 mb-2">
                    <span data-i18n="contactPage.lastName">Last Name</span> <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    required
                    class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-sec-yellow focus:ring-2 focus:ring-sec-yellow/20 transition-all duration-300 outline-none"
                    placeholder="Enter your last name"
                    data-i18n-placeholder="contactPage.lastNamePlaceholder"
                  />
                </div>

                {/* Email */}
                <div>
                  <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                    <span data-i18n="contactPage.email">Email Address</span> <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-sec-yellow focus:ring-2 focus:ring-sec-yellow/20 transition-all duration-300 outline-none"
                    placeholder="your.email@example.com"
                    data-i18n-placeholder="contactPage.emailPlaceholder"
                  />
                </div>

                {/* Phone Number */}
                <div>
                  <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
                    <span data-i18n="contactPage.phone">Phone Number</span>
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-sec-yellow focus:ring-2 focus:ring-sec-yellow/20 transition-all duration-300 outline-none"
                    placeholder="+1 (555) 123-4567"
                    data-i18n-placeholder="contactPage.phonePlaceholder"
                  />
                </div>

                {/* Region */}
                <div class="md:col-span-2">
                  <label for="region" class="block text-sm font-semibold text-gray-700 mb-2">
                    <span data-i18n="contactPage.region">Region</span> <span class="text-red-500">*</span>
                  </label>
                  <select
                    id="region"
                    name="region"
                    required
                    class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-sec-yellow focus:ring-2 focus:ring-sec-yellow/20 transition-all duration-300 outline-none bg-white"
                  >
                    <option value="" data-i18n="contactPage.selectRegion">Select your region</option>
                    <option value="north-america" selected data-i18n="contactPage.regionNorthAmerica">North America</option>
                    <option value="latin-america" data-i18n="contactPage.regionLatinAmerica">Latin America</option>
                    <option value="europe-mena" data-i18n="contactPage.regionEuropeMena">Europe & Middle East / North Africa</option>
                    <option value="asia-pacific" data-i18n="contactPage.regionAsiaPacific">Asia Pacific</option>
                    <option value="southeast-asia" data-i18n="contactPage.regionSoutheastAsia">Southeast Asia</option>
                    <option value="other" data-i18n="contactPage.regionOther">Other</option>
                  </select>
                </div>
              </div>
            </div>

            {/* Company Information Section */}
            <div>
              <h2 class="text-2xl font-bold text-ussec-green mb-6 flex items-center gap-3">
                <span class="w-10 h-10 rounded-full bg-sec-yellow/10 flex items-center justify-center text-sec-yellow text-lg">2</span>
                <span data-i18n="contactPage.companyInfo">Company Information</span>
              </h2>
              <div class="grid md:grid-cols-2 gap-6">
                {/* Company Name */}
                <div>
                  <label for="companyName" class="block text-sm font-semibold text-gray-700 mb-2">
                    <span data-i18n="contactPage.companyName">Company Name</span>
                  </label>
                  <input
                    type="text"
                    id="companyName"
                    name="companyName"
                    class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-sec-yellow focus:ring-2 focus:ring-sec-yellow/20 transition-all duration-300 outline-none"
                    placeholder="Your company name"
                    data-i18n-placeholder="contactPage.companyNamePlaceholder"
                  />
                </div>

                {/* Role */}
                <div>
                  <label for="role" class="block text-sm font-semibold text-gray-700 mb-2">
                    <span data-i18n="contactPage.role">Your Role</span> <span class="text-red-500">*</span>
                  </label>
                  <select
                    id="role"
                    name="role"
                    required
                    class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-sec-yellow focus:ring-2 focus:ring-sec-yellow/20 transition-all duration-300 outline-none bg-white"
                  >
                    <option value="" data-i18n="contactPage.selectRole">Select your role</option>
                    <option value="employer" data-i18n="contactPage.roleEmployer">Employer</option>
                    <option value="participant" data-i18n="contactPage.roleParticipant">Participant</option>
                    <option value="partner" data-i18n="contactPage.rolePartner">Partner</option>
                    <option value="other" data-i18n="contactPage.roleOther">Other</option>
                  </select>
                </div>

                {/* Company Type */}
                <div class="md:col-span-2">
                  <label for="companyType" class="block text-sm font-semibold text-gray-700 mb-2">
                    <span data-i18n="contactPage.companyType">Industry / Company Type</span>
                  </label>
                  <input
                    type="text"
                    id="companyType"
                    name="companyType"
                    class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-sec-yellow focus:ring-2 focus:ring-sec-yellow/20 transition-all duration-300 outline-none"
                    placeholder="e.g., Feed Manufacturer, Aquaculture, Livestock Producer"
                    data-i18n-placeholder="contactPage.companyTypePlaceholder"
                  />
                </div>
              </div>
            </div>

            {/* How Can We Help Section */}
            <div>
              <h2 class="text-2xl font-bold text-ussec-green mb-6 flex items-center gap-3">
                <span class="w-10 h-10 rounded-full bg-sec-yellow/10 flex items-center justify-center text-sec-yellow text-lg">3</span>
                <span data-i18n="contactPage.howCanWeHelp.title">How Can We Help You?</span>
              </h2>
              <p class="text-gray-600 mb-6" data-i18n="contactPage.howCanWeHelp.subtitle">Please select one option that best describes your inquiry:</p>

              <div class="space-y-3">
                {/* Option 1 */}
                <label class="flex items-start gap-4 p-4 rounded-xl border-2 border-gray-200 hover:border-sec-yellow/50 hover:bg-sec-yellow/5 cursor-pointer transition-all duration-300 group">
                  <input
                    type="radio"
                    name="helpOption"
                    value="training-events"
                    class="mt-1 w-5 h-5 text-sec-yellow border-gray-300 focus:ring-sec-yellow focus:ring-2"
                  />
                  <div class="flex-1">
                    <span class="font-semibold text-gray-900 group-hover:text-ussec-green transition-colors" data-i18n="contactPage.helpOption1.title">Training Events</span>
                    <p class="text-sm text-gray-600 mt-1" data-i18n="contactPage.helpOption1.description">I would like more information about upcoming training events in my region</p>
                  </div>
                </label>

                {/* Option 2 */}
                <label class="flex items-start gap-4 p-4 rounded-xl border-2 border-gray-200 hover:border-sec-yellow/50 hover:bg-sec-yellow/5 cursor-pointer transition-all duration-300 group">
                  <input
                    type="radio"
                    name="helpOption"
                    value="stay-engaged"
                    class="mt-1 w-5 h-5 text-sec-yellow border-gray-300 focus:ring-sec-yellow focus:ring-2"
                  />
                  <div class="flex-1">
                    <span class="font-semibold text-gray-900 group-hover:text-ussec-green transition-colors" data-i18n="contactPage.helpOption2.title">Stay Engaged</span>
                    <p class="text-sm text-gray-600 mt-1" data-i18n="contactPage.helpOption2.description">I am a past participant and want to stay engaged with the community</p>
                  </div>
                </label>

                {/* Option 3 */}
                <label class="flex items-start gap-4 p-4 rounded-xl border-2 border-gray-200 hover:border-sec-yellow/50 hover:bg-sec-yellow/5 cursor-pointer transition-all duration-300 group">
                  <input
                    type="radio"
                    name="helpOption"
                    value="talent-development"
                    class="mt-1 w-5 h-5 text-sec-yellow border-gray-300 focus:ring-sec-yellow focus:ring-2"
                  />
                  <div class="flex-1">
                    <span class="font-semibold text-gray-900 group-hover:text-ussec-green transition-colors" data-i18n="contactPage.helpOption3.title">Talent Development</span>
                    <p class="text-sm text-gray-600 mt-1" data-i18n="contactPage.helpOption3.description">I am an employer looking for talent development solutions for my business</p>
                  </div>
                </label>

                {/* Option 4 */}
                <label class="flex items-start gap-4 p-4 rounded-xl border-2 border-gray-200 hover:border-sec-yellow/50 hover:bg-sec-yellow/5 cursor-pointer transition-all duration-300 group">
                  <input
                    type="radio"
                    name="helpOption"
                    value="bring-programming"
                    class="mt-1 w-5 h-5 text-sec-yellow border-gray-300 focus:ring-sec-yellow focus:ring-2"
                  />
                  <div class="flex-1">
                    <span class="font-semibold text-gray-900 group-hover:text-ussec-green transition-colors" data-i18n="contactPage.helpOption4.title">Bring Programming</span>
                    <p class="text-sm text-gray-600 mt-1" data-i18n="contactPage.helpOption4.description">I am interested in bringing Soy Excellence Center programming to my country</p>
                  </div>
                </label>

                {/* Option 5 */}
                <label class="flex items-start gap-4 p-4 rounded-xl border-2 border-gray-200 hover:border-sec-yellow/50 hover:bg-sec-yellow/5 cursor-pointer transition-all duration-300 group">
                  <input
                    type="radio"
                    name="helpOption"
                    value="partnership"
                    class="mt-1 w-5 h-5 text-sec-yellow border-gray-300 focus:ring-sec-yellow focus:ring-2"
                  />
                  <div class="flex-1">
                    <span class="font-semibold text-gray-900 group-hover:text-ussec-green transition-colors" data-i18n="contactPage.helpOption5.title">Partnership</span>
                    <p class="text-sm text-gray-600 mt-1" data-i18n="contactPage.helpOption5.description">I want to learn more about partnering with the Soy Excellence Center</p>
                  </div>
                </label>

                {/* Option 6 - Other */}
                <label class="flex items-start gap-4 p-4 rounded-xl border-2 border-gray-200 hover:border-sec-yellow/50 hover:bg-sec-yellow/5 cursor-pointer transition-all duration-300 group">
                  <input
                    type="radio"
                    name="helpOption"
                    value="other"
                    class="mt-1 w-5 h-5 text-sec-yellow border-gray-300 focus:ring-sec-yellow focus:ring-2"
                  />
                  <div class="flex-1">
                    <span class="font-semibold text-gray-900 group-hover:text-ussec-green transition-colors">Other</span>
                    <p class="text-sm text-gray-600 mt-1">I have a different inquiry (please explain below)</p>
                  </div>
                </label>
              </div>

              {/* Additional Comments */}
              <div class="mt-6">
                <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
                  Additional Comments
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-sec-yellow focus:ring-2 focus:ring-sec-yellow/20 transition-all duration-300 outline-none resize-none"
                  placeholder="Please provide any additional details about your inquiry..."
                ></textarea>
              </div>
            </div>

            {/* Submit Button */}
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-6 border-t border-gray-200">
              <button
                type="submit"
                class="w-full sm:w-auto px-10 py-4 bg-sec-yellow hover:bg-ussec-yellow text-white font-bold text-lg rounded-xl transition-all duration-300 hover:shadow-lg hover:scale-105 active:scale-95 flex items-center justify-center gap-3"
              >
                <span>Submit Inquiry</span>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </button>
              <button
                type="reset"
                class="w-full sm:w-auto px-10 py-4 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold text-lg rounded-xl transition-all duration-300"
              >
                Clear Form
              </button>
            </div>

            <p class="text-center text-sm text-gray-500">
              <span class="text-red-500">*</span> Required fields
            </p>
          </form>

          {/* Success Message (hidden by default) */}
          <div id="success-message" class="hidden text-center py-12">
            <div class="w-20 h-20 rounded-full bg-green-100 flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-ussec-green mb-3">Thank You!</h3>
            <p class="text-gray-600">Your inquiry has been submitted successfully. A representative will follow up with you shortly.</p>
          </div>
        </div>
      </div>

      {/* Additional Contact Information */}
      <div class="max-w-4xl mx-auto mt-16 scroll-reveal-section">
        <div class="grid md:grid-cols-3 gap-8">
          <div class="scroll-reveal-item text-center">
            <div class="w-16 h-16 rounded-2xl bg-sec-yellow/10 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-sec-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="font-bold text-ussec-green mb-2" data-i18n="contactPage.contactInfo.email">Email Us</h3>
            <a href="mailto:info@soyexcellence.org" class="text-gray-600 hover:text-sec-yellow transition-colors">
              info@soyexcellence.org
            </a>
          </div>

          <div class="scroll-reveal-item text-center" style="transition-delay: 150ms;">
            <div class="w-16 h-16 rounded-2xl bg-sec-yellow/10 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-sec-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <h3 class="font-bold text-ussec-green mb-2" data-i18n="contactPage.contactInfo.phone">Call Us</h3>
            <a href="tel:+1-555-123-4567" class="text-gray-600 hover:text-sec-yellow transition-colors">
              +1 (555) 123-4567
            </a>
          </div>

          <div class="scroll-reveal-item text-center" style="transition-delay: 300ms;">
            <div class="w-16 h-16 rounded-2xl bg-sec-yellow/10 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-sec-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="font-bold text-ussec-green mb-2" data-i18n="contactPage.contactInfo.visit">Visit Us</h3>
            <p class="text-gray-600">
              <span data-i18n="contactPage.contactInfo.headquarters">Global Headquarters</span><br><span data-i18n="contactPage.contactInfo.location">Washington, D.C.</span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  let translations = {};
  let currentLanguage = 'en';

  // Load translations
  async function loadPageTranslations() {
    try {
      const lang = localStorage.getItem('preferredLanguage') || 'en';
      if (lang === currentLanguage && Object.keys(translations).length > 0) {
        return; // Already loaded
      }

      const response = await fetch('/i18n/translations.json');
      const data = await response.json();
      translations = data[lang] || {};
      currentLanguage = lang;
      applyPageTranslations();
    } catch (error) {
      console.error('Error loading translations:', error);
    }
  }

  // Apply translations to all elements
  function applyPageTranslations() {
    const elements = document.querySelectorAll('[data-i18n]');
    elements.forEach(element => {
      const key = element.getAttribute('data-i18n');
      if (translations[key]) {
        element.textContent = translations[key];
      }
    });
    
    // Handle placeholders
    const placeholderElements = document.querySelectorAll('[data-i18n-placeholder]');
    placeholderElements.forEach(element => {
      const key = element.getAttribute('data-i18n-placeholder');
      if (translations[key]) {
        element.placeholder = translations[key];
      }
    });
  }

  function initScrollReveal() {
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    const scrollItems = document.querySelectorAll('.scroll-reveal-item');
    scrollItems.forEach(item => {
      item.style.opacity = '0';
      item.style.transform = 'translateY(40px)';
      item.style.transition = 'opacity 0.8s ease-out, transform 0.8s ease-out';
      observer.observe(item);
    });
  }

  // Form submission handler
  const contactForm = document.getElementById('contact-form');
  const successMessage = document.getElementById('success-message');

  if (contactForm) {
    contactForm.addEventListener('submit', (e) => {
      e.preventDefault();

      // Here you would typically send the form data to a server
      // For now, we'll just show the success message
      contactForm.classList.add('hidden');
      successMessage.classList.remove('hidden');

      // Scroll to success message
      successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
    });
  }

  // Initialize on page load
  function initPage() {
    loadPageTranslations();
    initScrollReveal();
  }

  // Listen for language changes
  window.addEventListener('languageChange', loadPageTranslations);

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initPage);
  } else {
    initPage();
  }
</script>

<style>
  .scroll-reveal-item.is-visible {
    opacity: 1 !important;
    transform: translateY(0) !important;
  }

  /* Radio button custom styling */
  input[type="radio"]:checked + div {
    color: rgb(22, 101, 52); /* ussec-green */
  }

  input[type="radio"]:checked ~ div {
    color: rgb(22, 101, 52);
  }

  /* Selected state for radio labels */
  label:has(input[type="radio"]:checked) {
    border-color: rgb(250, 204, 21) !important; /* sec-yellow */
    background-color: rgb(250, 204, 21 / 0.1) !important;
  }
</style>
